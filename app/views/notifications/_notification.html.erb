<li class="collection-item avatar">
  <%= image_for(notification.user, :small, true) %>
  <span class="title">
    <a href="<%= user_path(notification.user.id) %>">
        <%= notification.user.firstname %> <%= notification.user.surname %>
    </a>
  </span>
  <p>
    <%= notification.content %>
  </p>
  <span class="secondary-content"><%= notification.created_at.strftime("%d/%m/%y %H:%M:%S") %><span>
</li>
