<!DOCTYPE html>
<html>
<head>
  <title>Csa</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body id="<%= params[:controller].parameterize %>_controller">

<nav class="indigo">
  <div class="container">
    <div class="nav-wrapper">
      <%= render_navigation %>
      <%= render :partial => 'sessions/login' %>
    </div>
  </div>
</nav>
<div class="container">
  <% flash.each do |key, value| %>
    <span class="flash_<%= key %>">
      <span class="flash_message"><%= value %></span>
    </span>
  <% end %>
  <%= render :partial => 'notifications/notifications' if logged_in? %>
  <%= yield %>
</div>



<% if false %>
  <div class="header">
    <%= render :partial => 'sessions/login' %>
    <div class="navigation">
      <%= render_navigation %>
    </div>
    <!-- Blank URI so browser will request current page when form submitted -->
    <%= form_tag '', method: 'GET', class: 'locale' do %>
        <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), \
                         onchange: 'this.form.submit()' %>
        <%= submit_tag 'Submit', id: 'locale-submit' %>
    <% end %>
  </div>
<% end %>
<% if false %>
  <div class="content">
    <% flash.each do |key, value| %>
      <span class="flash_<%= key %>">
        <span class="flash_message"><%= value %></span>
      </span>
    <% end %>
    <%= render :partial => 'notifications/notifications' if logged_in? %>
    <%= yield %>
  </div>
<% end %>
<div id="footer">
</div>

</body>
</html>
